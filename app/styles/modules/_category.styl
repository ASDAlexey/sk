.wrapper-columns
  display:flex
  .wrapper-list-products
    width:calc(100% - 350px)
    //flex-wrap:wrap
    //display:flex
    .list-products

      padding-top:47px
      > li
        margin-top:62px
        &:nth-child(-n+3)
          margin-top:0
  .sorting
    h2
      dibt()
      color:#606060
      font:12px Georgia, sans-serif
    ul
      dibt()
      > li
        margin-left:38px
        dibt()
        &:first-child
          margin-left:18px
        > a
          text-decoration:none
          color:#222
          font:12px Georgia, sans-serif
          font-style italic
          font-weight 700
          &.active
            color:#5a9e9f
            &.arrow-up
              position:relative
              z-index:0
              &:after
                content:''
                position:absolute
                z-index:1
                border:6px solid transparent
                border-bottom:6px solid #303030
                top:-2px
                right:-17px
            &.arrow-down
              position:relative
              z-index:0
              &:after
                content:''
                position:absolute
                z-index:1
                border:6px solid transparent
                border-top:6px solid #303030
                top:4px
                right:-17px
.sub-categories
  margin-top:60px
  margin-bottom:38px
  text-align:center
  display:flex
  flex-direction:row
  justify-content:space-between
  > li
    flex:1
    &:last-child
      a
        &:after
          display:none
    a
      height:56px
      background-color:#79bdbe
      text-decoration:none
      display:flex
      align-content:center
      position:relative
      z-index:0
      &:before
        content:''
        position:absolute
        z-index:1
        border:13px solid transparent
        border-bottom:8px solid #fff
        left:50%
        tt(-50%, 0)
        bottom:-8px
        tn(.5s)
      &.active, &:hover
        &:before
          bottom:0
      &:after
        content:''
        position:absolute
        z-index:1
        right:0
        height:30px
        width:1px
        background-color:#fff
        top:50%
        tt(0, -50%)
      span
        display:block
        margin:auto
        color:#fff

