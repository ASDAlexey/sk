.brands
  .list-brans
    margin:35px auto 0
    padding-bottom:29px
    width:1100px
    > div
      font-size:0
      white-space nowrap
      > div
        dibt()
        width:185px
        .wrapper-img
          width:100%
          height:64px
          position:relative
          z-index:0
          img
            aa(1)
            max-width 100%
            max-height 100%
  .slider-brand
    position:relative
    z-index:0
    .switch-brands
      > li
        position:absolute
        z-index:0
        top:50%
        tt(0, -50%)
        > a
          dibt()
          height:118px
          width:39px
          position:relative
          z-index:0
          background-color:#dcdcdc
          tn(.5s)
          span
            aa(1)
          &:hover
            background-color:#b8e8e9
        &:first-child
          left:0
          > a
            span
              sprite($arrow_left)
              margin-left:-3px
        &:nth-child(2)
          right:0
          > a
            span
              margin-right:-3px
              sprite($arrrow_right)
