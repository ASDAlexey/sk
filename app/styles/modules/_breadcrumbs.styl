.breadcrumbs{
  > li{
    margin-left:30px;
    &:first-child{
      margin-left:0;
    }
    dibt();
    a, span{
      display:block;
      lr(12px);
    }
    a{
      text-transform:uppercase
      text-decoration:none
      color:#606060;
      position:relative;
      z-index:0;
      &:hover{
        text-decoration:none;
      }
      &:after{
        content:"/"
        position:absolute
        z-index:0
        right:-22px
        top:-2px
        color:#606060;
        lr(16px);
      }
    }
    span{
      text-transform:uppercase
      lr(12px);
      color:#606060;
    }
  }
}