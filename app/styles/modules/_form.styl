.content-block
  .form-validate
    width:580px
    margin:0 auto
    margin-top:12px
    > div
      margin-top:49px
      dibt()
      width:100%
      >label
        text-transform:uppercase
        color:#606060
        lm(12px)
        margin-bottom:12px
        dibt()
      &.small
        width:278px
        &:nth-of-type(2)
          margin-right:20px
      input
        height:43px
        width:100%
        display:block
        padding-left:10px
      textarea
        padding-left:10px
        width:100%
        display:block
        resize none
        height:198px
      &.wrapper-send
        margin-top:30px
        text-align:center
        .send
          padding-top:5px
          width:194px
          height:51px
          text-transform:uppercase
          color:#fff
          dibt()
          background-color:#79bdbe
          tn(.5s)
          &:hover
            background-color:#66bebe



