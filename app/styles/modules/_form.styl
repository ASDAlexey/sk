.slider-form
  float:right
  width:340px
  height:331px
  background-color:rgba(#fff, .7)
  padding:44px 44px 25px
  h2
    span
      text-align:center
      color:#0048a0
      display:block
      text-transform:uppercase
      &:first-child
        kl(36px)
        margin-bottom:8px
      &:nth-child(2)
        kb(24px)
        margin-bottom:23px
  .form-validate
    width:100%
    >p
      position:relative
      z-index:0
      color:#000
      kr(12px)
      padding-left:47px
      >span
        top:50%
        margin-top:-8px
        position:absolute
        z-index:1
        left:25px
        color:#000
        font-size:18px
    .wrapper-send
      .send
        width:90%
        margin:33px auto 10px
        padding:6px 0 4px
        border:2px solid #ff3000
        display:block
        text-decoration:none
        color:#ff3000
        kb(16px)
        text-transform:uppercase
        text-align:center
        tn()
        &:hover
          color:#fff
          background-color:#ff3000
    .wrapper-input
      margin-top:18px
      width:100%
      position:relative
      z-index:0
      input
        color:#000
        text-align:center
        padding:0 7px
        width:100%
        display:block
        height:30px
        position:relative
        z-index:2
        &:focus + span
          transform:perspective(1000px) rotate3d(1, 0, 0, 0deg);
      span
        tn(.5s)
        top:0;
        left:0
        position:absolute
        z-index:1
        width:100%
        height:30px
        display:block
        background-color:#fada8f
        transform-origin:0px 100% 0px
        transform:perspective(1000px) rotate3d(1, 0, 0, 90deg);
