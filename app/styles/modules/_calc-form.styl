.calc-form
  text-align:left
  > div:not(.wrapper-button):not(.wrapper-files-block)
    margin-top:33px
    width:280px
    height:46px
    dibt()
    position:relative
    z-index:0
    &.half
      width:438px
    &.double
      width:597px
    &.full
      width:914px
      height:160px
      textarea
        resize:none
        padding-left:10px !important
    &.small
      width:79px
      input
        padding:0 10px !important
        text-align:center
      &.ml-small
        margin-left:17px
    &.select-block
      position:relative
      z-index:1
      &.open
        z-index:2
    &.ml
      margin-left:33px
    &.required
      input
        padding-right:20px
      &:after
        content:'*'
        lb(21px)
        color:#fff
        position:absolute
        z-index:1
        top:11px
        right:11px
    before()
      content:''
      position:absolute
      z-index:1
      left:12px
      top:50%
      tt(0, -50%)
    &.contact_person
      input
        padding-left:40px
      &:before
        before()
        sprite($contact_person)
    &.phone
      input
        padding-left:40px
      &:before
        before()
        sprite($phone_cont)
    &.email
      input
        padding-left:40px
      &:before
        before()
        sprite($email_cont)
    &.purpose_building
      input
        padding-left:40px
      &:before
        before()
        sprite($purpose_building)
    &.district
      input
        padding-left:40px
      &:before
        before()
        sprite($district)
    &.presence_project
      .multiSelect .button .buttonLabel
        padding-left:34px
      input
        padding-left:40px
      &:before
        before()
        sprite($presence_project)
    input
      padding:0 10px
      display:block
      width:100%
      height:100%
      border:1px solid #fff
      color:#fff
      lr(14px, 20px)
      tn(.5s)
      &:focus
        color:#3c4448
        background-color:#fff
    textarea
      background:none
      padding:13px 20px 0 45px
      display:block
      width:100%
      height:100%
      border:1px solid #fff
      color:#fff
      lr(14px, 20px)
      tn(.5s)
      &:focus
        color:#3c4448
        background-color:#fff