.wrapper-thank{
  &.load{
    opacity:1
  }
  opacity:0
  tn(.7s)
  box-shadow: 0 0 10px rgba(0,0,0,0.5);
  position:fixed;
  z-index:3000;
  width:720px;
  height:268px;
  margin-left:-360px;
  margin-top:-100px;
  background-color:#fff;
  text-align:center;
  left:50%;
  top:50%;
  .close{
    position:absolute;
    z-index:1;
    display:block;
    margin-left:-17px;
    right:15px
    top:15px
    cursor:pointer;
    >span{
      sprite($close);
      display:block;
    }
  }
  .wrapper-thank-content{
    margin:35px auto 0;
    span{
      display:block
      text-align:center;
      color:#000;
      lr(35px)
      &:nth-child(2){
        margin-top:15px
        font-size:40px
        margin-bottom:10px
      }
    }
  }
}