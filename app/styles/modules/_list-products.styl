.list-products
  position:relative
  z-index:2
  margin-left:20px
  > li
    position:relative
    z-index:0
    padding:35px 0
    tn(.5s)
    after()
    .close-more-list
      position:absolute
      z-index:7
      top:37px
      right:0
      display:none
      span
        dibt()
        sprite($close_more_list)
    &.active
      .close-more-list
        display:block
        span
          tn(.7s)
          &:hover
            transform:rotate(360deg)
    > span
      position:absolute
      z-index:4
      left:0
      top:0
      width:1920px
      height:100%
      display:block
      background-color:#fff
      transition:background .5s ease-out
      border-bottom:1px solid #ccc
    &:hover
      background-color:#f4f7e7
      > span
        background-color:#f4f7e7
    &.active
      background-color:#fff
      .default-info
        padding-top:20px
      .product-info
        cursor:default
        .more-info
          right:0
          max-height:1000px
          padding:20px 0
      .small-img
        max-height 10000px
        > li
          transform:scale(1)
      > span
        background-color:#fff
    .product-info
      position:relative
      z-index:5
      width:274px
      padding-left:10px
      cursor:pointer
      dibt()
      .title-product
        text-transform:uppercase
        kb(18px, 1.3)
        color:#000
      .default-info, .more-info
        padding:20px 0
        li
          margin-top:10px
          white-space nowrap
          @media screen and (max-width:1100px)
            white-space normal
          span
            dibt()
            &:first-child
              white-space normal
              width:163px
              color:#888982
              padding-right:7px
            &:nth-child(2)
              width:110px
              color:#000
              &.price
                color:#000
                kb(18px)
                sup
                  color:#000
                  kb(12px)
              &.fa-close
                position:relative
                z-index:0
                top:-2px
                color:#0048a0
                font-size:18px
              &.fa-check
                position:relative
                z-index:0
                top:-2px
                color:#ff3000
                font-size:18px
      .default-info
        padding-top:0
      .more-info
        border-bottom:1px solid #ccc
        position:relative
        z-index:0
        max-height:0
        padding:0
        right:-1000px
        transition:all 1s
        &:first-child
          padding-top:0
      a
        margin-top:8px
        padding:6px 21px 4px
        border:2px solid #ff3000
        dibt()
        text-decoration:none
        color:#ff3000
        kb(16px)
        text-transform:uppercase
        text-align:center
        tn()
        &:hover
          color:#fff
          background-color:#ff3000
.small-img
  font-size:0
  tn(1s)
  max-height:0
  li
    margin-left:5px
    margin-top:5px
    transform:scale(0)
    tn(1s)
    dibt()
    width:74px
    height:74px
    &:nth-child(4n-3)
      margin-left:0
    .wrapper-img
      display:block
      width:100%
      height:100%
      position:relative
      z-index:0
      border:1px solid #ccc
      background-color:#fff
      tn(.5s)
      &.active
        border-color #ff3000
      img
        aa(1)
        max-width calc(100% - 10px)
        max-height calc(100% - 10px)
.description
  padding-top:0
  color:#000
  kr(14px, 1.3)
  max-height 0
  opacity:0
  tn(1s)
.list-products li.active .description
  opacity:1
  max-height 1000px
  padding-top:23px