.aside
  width:350px
  float:left
  padding-right:85px
  .wrapper-buttons
    margin-top:31px
    after()
    padding-top:12px
    > button
      float:left
      text-decoration:none
      lr(10px, 37px)
      color:#fff
      text-transform:uppercase
      width:153px
      height:40px
      display:block
      margin:0 auto
      background-color:#a9c251
      tn(.5s)
      &:hover
        background-color:#84c232
    a
      float:right
      text-decoration:none
      dibt()
      margin-top:14px
  .list-switchers
    width:100%
    > li
      margin-top:30px
      display:block
      &:first-child
        margin-top:0
      .content-switcher
        overflow hidden
        tn(.7s)
      &:last-child
        > a
          &.open
            position:relative
            z-index:0
            &:before
              content:''
              position:absolute
              z-index:1
              left:0
              bottom:-20px
              width:100%
              height:1px
              background-color:#000
      > a
        cursor:pointer
        text-align:left
        position:relative
        z-index:0
        padding-top:3px
        display:block
        height:24px
        width:100%
        text-decoration:none
        border-bottom:1px solid #303030
        font:12px Georgia, sans-serif
        font-style:italic
        color:#606060
        &.open
          &:after
            transform:translate(0, -50%) scale(1, -1)
            margin-top:7px
          + .content-switcher
            max-height 800px
        &.close
          &:after
            transform:translate(0, -50%) scale(-1, 1)
          + .content-switcher
            max-height 0
        &:after
          tn(.5s)
          content:''
          position:absolute
          z-index:1
          top:50%
          right:1px
          border:6px solid transparent;
          border-bottom:6px solid #303030
  .content-switcher
    .custom-color
      display:none
    .checkbox-block, .checkbox-color
      position:relative
      z-index:0
      margin-top:14px
      &:first-child
        margin-top:21px
    .custom-checkbox
      display:none
    .checkbox-block
      .checkbox
        cursor:pointer
        position:relative
        z-index:0
        margin-left:22px
        font:12px Georgia, sans-serif
        font-style:italic
        color:#606060
        &.check
          + .fa
            opacity:1
        &:after
          left:-22px
          top:0
          content:''
          position:absolute
          z-index:1
          width:14px
          height:13px
          background-color:#ccc
    .checkbox-color
      dibt()
      margin-top:15px !important
      label
        margin-left:0
      .checkbox
        margin-left:14px
        &:nth-child(5n-4)
          margin-left:0
        &:after
          display:none
        dibt()
        width:25px
        height:25px
        border-radius:50%
        position:relative
        z-index:0
        cursor:pointer
        + .fa
          color:#fff
          font-size:14px
          left:6px
          margin-top:0
        &.check
          + .fa
            opacity:1
        &:after
          left:-22px
          top:0
          content:''
          position:absolute
          z-index:1
          width:14px
          height:13px
          background-color:#ccc
    .fa
      tn(.7s)
      opacity:0
      position:absolute
      z-index:0
      left:2px
      top:50%
      tt(0, -50%)
      margin-top:-1px
      font-size:10px
    .list-range
      after()
      > li
        font:14px Georgia, sans-serif
        font-style:italic
        color:#606060
        &:first-child
          float:left
        &:nth-child(2)
          float:right