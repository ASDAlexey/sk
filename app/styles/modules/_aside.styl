  .nav
    dibt()
    //height:100%
    //position:absolute
    //z-index:0
    padding-top:30px
    width:127px
    > ul
      > li
        &:last-child
          >a
            >span:before
              display:none
        > a
          display:block
          text-align:center
          height:85px
          text-decoration:none
          >span
            cursor:pointer
            dibt()
            position:relative;
            width:130px
            height:80px
            z-index:0
            &:before
              content:''
              position:absolute
              z-index:1
              bottom:0
              right:10%
              width:80%
              height:1px
              background-color:rgba(#fff,.5)
            &:hover:after
              width:100%
            &:after
              left:0;
              top:-4px;
              content:''
              position:absolute
              z-index:1
              tn(.5s)
              background-color:#ff3000
              height:4px
              width:0
            span
              aa(1)
              top:28%
              &.text
                top:75%
                color:#000
                kb(13px)
                text-transform:uppercase
