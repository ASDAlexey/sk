.wrapper-scroller
  text-align:center
  overflow hidden
  position:relative
  z-index:0
  .switcher
    width:100%
    height:0
    position:relative
    z-index:1
    > li
      display:block
      position:absolute
      z-index:1
      right:-27px
      > a
        display:block
        text-decoration:none
        tn(.5s)
      &:first-child
        top:70px
        > a
          border:8px solid transparent
          border-bottom:8px solid #000
          &:hover
            border-bottom-color:#79bdbe
      &:nth-child(2)
        top:100px
        > a
          border:8px solid transparent;
          border-top:8px solid #000
          &:hover
            border-top-color:#79bdbe
  .move-to-slide-block
    position:absolute
    z-index:1
    right:100px
    bottom:22px
    dibt()
    font-size:0
    > li
      margin-left:9px
      dibt()
      &:first-child
        margin-left:0
      > a
        text-decoration:none
        border:4px solid #bfd5d6
        border-radius:50%
        width:16px
        height:16px
        display:block
        background-color:#bfd5d6
        &.active
          background:none
          border:4px solid #79bdbe
  &.top-scroller
    height:460px
    .scroller
      > div
        > div
          height:477px
  &.brand-scroller
    height:128px
    .scroller
      > div
        > div
          height:64px
.scroller
  overflow hidden !important
  width:100%
  dibt()
  &.scroller-y
    height:174px
  > div
    white-space nowrap
    font-size:0
    > div
      dibt()
      width:1180px
      background-repeat:no-repeat
      background-position:center center
      background-size:cover
      position:relative
      z-index:0
      .inner
        width:100%
        height:100%
        left:0
        top:0
        display:flex
        align-items center
        &.right
          direction rtl
          > .cont
            margin-left:30px
        &.left
          direction ltr
          > .cont
            margin-right:30px
        .cont
          text-align:center
          width:550px
          after()
          img
            margin-bottom:33px
          h1
            color:#303030
            text-transform:uppercase
            lr(39px)
            margin-bottom:17px
          p
            margin-bottom:43px
            font:22px Georgia, sans-serif
            font-style italic
            color:#606060
          div
            a
              text-decoration:none
              dibt()
              background-color:#79bdbe
              tn(.5s)
              color:#fff
              width:229px
              height:60px
              border:6px solid #fff
              lr(14px, 53px)
              text-transform:uppercase
              &:hover
                background-color:#66bebe