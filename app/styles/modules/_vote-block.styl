.vote-block
  background-color:#fff
  width:500px
  margin:0 auto
  height:432px
  box-shadow:0 0 40px rgba(0, 0, 0, 0.2)
  padding-top:50px
  &.recall-popup-block
    height:610px
    .wrapper-send
      margin-top:20px !important
  .title-form
    text-transform:uppercase
    text-align:center
    color:#303030
    lb(36px)
  p
    &.rate
      text-align:center
      lb(33px)
      margin:25px 0 8px
    &.count-vote
      margin:33px 0 43px
      lb(19px)
      text-align:center
      color:#303030
  .wrapper-send
    text-align:center
    .send
      dibt()
      text-align:center
      color:#fff
      text-transform:uppercase
      width:193px
      height:51px
      background-color:#79bdbe
      lr(14px, 53px)
      tn(.5s)
      &:hover
        background-color:#84c232
  .wrapper-starts
    text-align:center
    ul
      font-size:0
      text-align:left
      dibt()
      sprite($vote_stars)
      &:hover, &.active
        sprite($vote_stars_full)
      &.active
        > li
          width:53px
          height:49px
          dibt()
          &.active
            sprite($one_star_full)
            ~ li
              sprite($one_star)
      > li
        width:53px
        height:49px
        dibt()
        &:hover
          sprite($one_star_full)
          ~ li
            sprite($one_star)
