.wrapper-list-news
  position:relative
  z-index:0
  margin-bottom:50px
  &:after
    content:'';
    position:absolute;
    z-index:1;
    left:50%
    top:0
    margin-left:-4px
    width:9px
    height:9px
    background-color:#fff
  .list-news
    padding:24px 0 96px
    margin-top:63px
    after()
    &:before
      content:'';
      position:absolute;
      z-index:1;
      height:100%
      width:1px
      background-color:#fff
      left:50%
      top:0
    $width = 66px
    li
      padding:30px 19px
      width:424px
      background-color:#fff
      margin-top:104px
      position:relative
      z-index:0
      .time
        color:#e7512a
        lb()
      .wrapper-link
        margin-top:11px
        text-align:left
        a
          color:#e7512a
          lb()
      img
        position:absolute
        z-index:1
        bottom:-21px
        right 21px
        border:2px solid #fff
      h2
        color:#3c4447
        text-transform:uppercase
        text-align:center
        lbl(17px)
        margin-bottom:23px
      p
        lr(14px,1.35)
        color:#3c4447
        padding-bottom:25px
      &:before
        content:'';
        position:absolute;
        z-index:1;
        width:$width
        height:1px
        background-color:#fff
        top:50%
      &:first-child
        margin-top:0
      &:after
        display:none
      &:nth-child(odd)
        float:left
        &:before
          right:-($width)
      &:nth-child(even)
        float:right
        &:before
          left:-($width);